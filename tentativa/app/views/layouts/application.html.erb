<!DOCTYPE html>
<html>
  <head>
    <title>Tentativa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a class="navbar-brand" href="<%= root_path %>"><i class="fas fa-rocket"></i>
                Trabalho Struct
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="<%= users_path %>"><i class="fas fa-user"></i>
                                Usuários
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="<%= groups_path %>"><i class="fas fa-users"></i>
                                Grupos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="<%= genders_path %>"><i class="fas fa-genderless"></i>
                                Gêneros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="<%=habilities_path%>"><i class="fas fa-hammer"></i>
                                Habilidades
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="<%=clans_path%>"><i class="fas fa-home"></i>
                                Clans
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="<%=clan_members_path%>"><i class="fas fa-male"></i>
                                Membros
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        <%= yield %>
        <footer>
            <div class="copyright">
                <p>&copy 2019 - Struct</p>
            </div>
            <div class="social">
                <a href="http://struct.unb.br/" class="support">Contato</a>
                <a href="https://www.facebook.com/StructUnB/" class="face"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="tweet"><i class="fab fa-twitter"></i></a>
                <a href="#" class="linked"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </footer>
  </body>
</html>
